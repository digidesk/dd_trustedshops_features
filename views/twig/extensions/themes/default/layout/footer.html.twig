{% extends "layout/footer.html.twig" %}

{% set oTSID = oViewConf.getTSIDObj() %}

{% block dd_footer_social_links %}
    {{ parent() }}

    {% if oTSID.review_sticker == 1 %}
        {% include "@dd_trustedshops_features/widget/dd_trustedshops_features_widget" with {sFeature: "review_sticker", sPlacement: "footer"} %}
    {% endif %}
{% endblock %}

{% block footer_main_row %}
    {% if oTSID.review_sticker == 2 %}
        {% include "@dd_trustedshops_features/widget/dd_trustedshops_features_widget" with {sFeature: "review_sticker", sPlacement: "footer"} %}
    {% endif %}

    {{ parent() }}
{% endblock %}

{% block footer_main %}
    {{ parent() }}

    {% include "@dd_trustedshops_features/widget/dd_trustedshops_features_widget" with {sFeature: "shop_ratings"} %}

    {% include "@dd_trustedshops_features/widget/dd_trustedshops_features_widget" with {sFeature: "trustbadge"} %}
{% endblock %}
